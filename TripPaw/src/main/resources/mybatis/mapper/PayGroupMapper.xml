<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssdam.tripPaw.pay.PayGroupMapper">

  <resultMap id="PayGroupResultMap" type="com.ssdam.tripPaw.domain.PayGroup">
    <id property="id" column="id" />
    <result property="userId" column="user_id" />
    <result property="impUid" column="imp_uid" />
    <result property="merchantUid" column="merchant_uid" />
    <result property="totalAmount" column="total_amount" />
    <result property="hasPaid" column="has_paid" />
    <result property="paidAt" column="paid_at" />
    <result property="createdAt" column="created_at" />
    <result property="userTripPlanId" column="user_trip_plan_id" />
    <result property="payShareId" column="pay_share_id" />
  </resultMap>

  <select id="findById" resultMap="PayGroupResultMap">
    SELECT * FROM pay_group WHERE id = #{id}
  </select>

  <select id="findAll" resultMap="PayGroupResultMap">
    SELECT * FROM pay_group
  </select>

  <insert id="insert" parameterType="com.ssdam.tripPaw.domain.PayGroup">
    INSERT INTO pay_group (
      user_id, imp_uid, merchant_uid, total_amount, has_paid, paid_at, created_at, user_trip_plan_id, pay_share_id
    ) VALUES (
      #{userId}, #{impUid}, #{merchantUid}, #{totalAmount}, #{hasPaid}, #{paidAt}, #{createdAt}, #{userTripPlanId}, #{payShareId}
    )
  </insert>

  <delete id="delete">
    DELETE FROM pay_group WHERE id = #{id}
  </delete>

</mapper>